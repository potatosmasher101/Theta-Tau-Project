<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Live Weather Dashboard</title>
    <!-- Load Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Use Inter font -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: #e0f2f1; /* Light cyan background */
        }
    </style>
</head>
<body class="min-h-screen flex items-center justify-center p-4">

    <div id="app-container" class="w-full max-w-lg bg-white rounded-xl shadow-2xl p-6 md:p-8 transform transition duration-500 hover:scale-[1.01]">
        
        <h1 class="text-3xl font-extrabold text-gray-800 mb-6 border-b pb-3 text-center">
            Live Weather Forecast
        </h1>

        <!-- Search Input -->
        <div class="flex space-x-3 mb-6">
            <input 
                type="text" 
                id="cityInput" 
                placeholder="Enter city name (e.g., London)"
                class="flex-grow p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-cyan-500 focus:border-cyan-500 text-gray-700 transition duration-150"
            >
            <button 
                id="searchButton" 
                class="bg-cyan-600 hover:bg-cyan-700 text-white font-semibold py-3 px-5 rounded-lg shadow-md transition duration-200 transform hover:scale-[1.02] active:scale-[0.98]"
            >
                Search
            </button>
        </div>

        <!-- Loading and Error Messages -->
        <div id="messageContainer" class="mb-4 hidden">
            <!-- Content will be injected by JavaScript -->
        </div>

        <!-- Weather Data Display -->
        <div id="weatherDisplay" class="hidden text-center p-6 bg-gradient-to-br from-cyan-500 to-blue-500 rounded-xl shadow-inner text-white">
            <p id="cityName" class="text-4xl font-bold mb-2"></p>
            <p id="temperature" class="text-6xl font-extrabold mb-4"></p>
            
            <div class="flex items-center justify-center space-x-3 mb-4">
                <img id="weatherIcon" class="w-16 h-16" alt="Weather Icon">
                <p id="description" class="text-3xl capitalize font-medium"></p>
            </div>
            
            <div class="grid grid-cols-2 gap-4 pt-4 border-t border-cyan-300/50">
                <div class="text-left">
                    <p class="text-sm font-light opacity-80">Humidity</p>
                    <p id="humidity" class="text-xl font-semibold"></p>
                </div>
                <div class="text-right">
                    <p class="text-sm font-light opacity-80">Wind Speed</p>
                    <p id="windSpeed" class="text-xl font-semibold"></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Firebase SDK Imports (Mandatory in Canvas Environment) -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, signInWithCustomToken } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, setLogLevel } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";

        // Global variables provided by the Canvas environment
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
        const firebaseConfig = JSON.parse(typeof __firebase_config !== 'undefined' ? __firebase_config : '{}');
        const initialAuthToken = typeof __initial_auth_token !== 'undefined' ? __initial_auth_token : null;

        let app;
        let auth;
        let db;
        
        // --- Firebase Initialization and Authentication ---
        try {
            if (Object.keys(firebaseConfig).length > 0) {
                app = initializeApp(firebaseConfig);
                auth = getAuth(app);
                db = getFirestore(app);
                setLogLevel('error'); // Set log level

                if (initialAuthToken) {
                    await signInWithCustomToken(auth, initialAuthToken);
                } else {
                    await signInAnonymously(auth);
                }
                // console.log("Firebase initialized and user authenticated.");
            } else {
                console.warn("Firebase config is missing. Running without Firebase services.");
            }
        } catch (e) {
            console.error("Firebase initialization failed:", e);
        }
        
        // --- Core Weather Application Logic ---
        
        // IMPORTANT: Replace this placeholder with your actual OpenWeatherMap API Key.
        const API_KEY = "YOUR_OPENWEATHERMAP_API_KEY"; 
        const BASE_URL = "https://api.openweathermap.org/data/2.5/weather";

        const cityInput = document.getElementById('cityInput');
        const searchButton = document.getElementById('searchButton');
        const weatherDisplay = document.getElementById('weatherDisplay');
        const messageContainer = document.getElementById('messageContainer');
        const cityNameEl = document.getElementById('cityName');
        const temperatureEl = document.getElementById('temperature');
        const descriptionEl = document.getElementById('description');
        const humidityEl = document.getElementById('humidity');
        const windSpeedEl = document.getElementById('windSpeed');
        const weatherIconEl = document.getElementById('weatherIcon');

        // Helper function to display messages (errors/loading)
        function displayMessage(text, isError = false) {
            messageContainer.textContent = text;
            messageContainer.className = `mb-4 p-3 rounded-lg text-sm ${isError ? 'bg-red-100 text-red-700' : 'bg-blue-100 text-blue-700'}`;
            messageContainer.classList.remove('hidden');
            weatherDisplay.classList.add('hidden');
        }
        
        // Helper function to hide messages
        function hideMessage() {
            messageContainer.classList.add('hidden');
        }

        // Fetches weather data with exponential backoff for retries
        async function fetchWeatherData(city, attempt = 0) {
            if (API_KEY === "YOUR_OPENWEATHERMAP_API_KEY") {
                 displayMessage("Error: Please replace 'YOUR_OPENWEATHERMAP_API_KEY' in the code with your actual key.", true);
                 return null;
            }

            const url = `${BASE_URL}?q=${encodeURIComponent(city)}&appid=${API_KEY}&units=metric`;
            const MAX_RETRIES = 3;

            try {
                displayMessage(`Fetching weather for ${city}...`);
                const response = await fetch(url);

                if (!response.ok) {
                    if (response.status === 404) {
                        throw new Error(`City not found: ${city}`);
                    }
                    if (attempt < MAX_RETRIES) {
                        // Exponential backoff delay
                        const delay = Math.pow(2, attempt) * 1000;
                        await new Promise(resolve => setTimeout(resolve, delay));
                        // Retry
                        return await fetchWeatherData(city, attempt + 1);
                    }
                    throw new Error(`Failed to fetch weather data: ${response.statusText}`);
                }

                const data = await response.json();
                return data;

            } catch (error) {
                console.error("Fetch error:", error);
                displayMessage(`Error: ${error.message}. Please try again.`, true);
                return null;
            }
        }

        // Processes and displays the fetched data
        function displayWeather(data) {
            hideMessage();
            
            if (!data || !data.main || !data.weather) {
                displayMessage("Error: Could not retrieve valid weather data.", true);
                return;
            }

            const temp = data.main.temp;
            const description = data.weather[0].description;
            const iconCode = data.weather[0].icon;
            const humidity = data.main.humidity;
            const windSpeed = data.wind.speed; // m/s

            cityNameEl.textContent = `${data.name}, ${data.sys.country}`;
            temperatureEl.textContent = `${Math.round(temp)}Â°C`;
            descriptionEl.textContent = description;
            humidityEl.textContent = `${humidity}%`;
            windSpeedEl.textContent = `${(windSpeed * 3.6).toFixed(1)} km/h`; // Convert m/s to km/h for readability
            weatherIconEl.src = `https://openweathermap.org/img/wn/${iconCode}@2x.png`;
            weatherIconEl.alt = description;

            weatherDisplay.classList.remove('hidden');
        }

        // Main function to handle the search
        async function handleSearch() {
            const city = cityInput.value.trim();
            if (!city) {
                displayMessage("Please enter a city name.", true);
                return;
            }

            const data = await fetchWeatherData(city);
            if (data) {
                displayWeather(data);
            }
        }

        // Event Listeners
        searchButton.addEventListener('click', handleSearch);
        cityInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                handleSearch();
            }
        });

        // Initial search on load for a default city
        window.onload = () => {
             // For demonstration, immediately prompt the user for their key
             if (API_KEY === "YOUR_OPENWEATHERMAP_API_KEY") {
                 displayMessage("Please obtain an API key from OpenWeatherMap and replace 'YOUR_OPENWEATHERMAP_API_KEY' in the JavaScript code to enable live search.", true);
             } else {
                 cityInput.value = 'Tokyo'; // Default city
                 handleSearch();
             }
        };

    </script>

</body>
</html>
